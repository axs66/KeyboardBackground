<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Title</key>
    <string>KeyboardTheme</string>
    <key>PreferenceSpecifiers</key>
    <array>
        <dict>
            <key>Type</key>
            <string>PSGroupSpecifier</string>
            <key>Title</key>
            <string>主题设置</string>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSTextFieldSpecifier</string>
            <key>Title</key>
            <string>背景图片路径</string>
            <key>Key</key>
            <string>backgroundImage</string>
            <key>DefaultValue</key>
            <string>/Library/Application Support/KeyboardTheme/bg1.png</string>
            <key>AutocapitalizationType</key>
            <integer>0</integer>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSColorPickerSpecifier</string>
            <key>Title</key>
            <string>按键高亮背景色</string>
            <key>Key</key>
            <string>highlightedBackgroundColor</string>
            <key>DefaultValue</key>
            <string>#FFCC00</string>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSColorPickerSpecifier</string>
            <key>Title</key>
            <string>箭头按钮背景色</string>
            <key>Key</key>
            <string>arrowButtonBackgroundColor</string>
            <key>DefaultValue</key>
            <string>#FFFFFF</string>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSColorPickerSpecifier</string>
            <key>Title</key>
            <string>候选栏网格背景色</string>
            <key>Key</key>
            <string>gridBackgroundColor</string>
            <key>DefaultValue</key>
            <string>#EEEEEE</string>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSColorPickerSpecifier</string>
            <key>Title</key>
            <string>按键高亮文字颜色</string>
            <key>Key</key>
            <string>highlightedTextColor</string>
            <key>DefaultValue</key>
            <string>#000000</string>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSSliderSpecifier</string>
            <key>Title</key>
            <string>按键背景不透明度</string>
            <key>Key</key>
            <string>keyBackgroundOpacity</string>
            <key>DefaultValue</key>
            <real>0.5</real>
            <key>MinimumValue</key>
            <real>0.0</real>
            <key>MaximumValue</key>
            <real>1.0</real>
        </dict>

        <dict>
            <key>Type</key>
            <string>PSButtonSpecifier</string>
            <key>Title</key>
            <string>应用更改（重载主题）</string>
            <key>Key</key>
            <string>reloadTheme</string>
            <key>Action</key>
            <string>reloadTheme:</string>
        </dict>
    </array>
</dict>
</plist>
